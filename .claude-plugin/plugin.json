{
  "name": "wechat-tech-news",
  "version": "4.0.0",
  "description": "Five-skill workflow suite for automated tech news collection, validation, writing, formatting, and Word export",
  "defaults": {
    "output_dir": "~/my-code/ResearchLab/daily_news/",
    "date_format": "YYYYMMDD",
    "timezone": "Asia/Shanghai"
  },
  "hooks": {
    "pre-validation": {
      "description": "Checks before validation phase",
      "enabled": true
    },
    "post-formatting": {
      "description": "Final quality check after formatting",
      "enabled": true
    }
  }
}
